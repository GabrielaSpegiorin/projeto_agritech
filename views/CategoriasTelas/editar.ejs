<%- include('../includes/header.ejs', {titulo : 'Editar categorias' }) %>

<main>
    <h2>Editando Categoria</h2>

    <form action="/categorias/<%= categorias.id_categoria %>/editar" method="post" class="form">
        <div class="form-group">
            <label for="nome_categoria">Nome da Categoria</label>
            <input type="text" id="id_categoria" name="nome_categoria" value="<%= categorias.nome_categoria %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a href="/categorias" class="btn btn-secondary">Cancelar</a>
    </form>
</main>

